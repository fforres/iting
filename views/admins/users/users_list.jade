extends ../layoutAdmins

block content
	.row.initial
		.col-xs-11.col-sm-11.col-centered
			include ../../snipets/errors
			h3 Lista de Usuarios
			.col-md-11
				.table-responsive
					table.table.table-condensed
						thead
							tr
								th #
								th Nombre
								th Local
								//th Local
						tbody
							each user,i in users
								tr
									td #{i+1}
									td
										strong
											a(href="##{user.nombre}") #{user.email}
									td
										a(href="/admins/users/edit/#{user.id}/asignaralocal") Asignar
