extends ../../layout

block content
	.row.initial#inventario.edit(data-idinventario='#{id}' data-fecha='#{fechaformat}')
		.col-xs-10.col-sm-10.col-centered
			include ../../snipets/errors
			h1.col-md-12 Inventario - #{fecha}
		.col-xs-11.col-sm-11.col-centered.agregados
			each entrada,i in entradas
				.col-xs-12(data-entradaId="#{entrada.id}").item
					h2.nombre #{entrada.nombre}
					h4.descripcion #{entrada.descripcion}
					each tp,i in entrada.tipomovimiento
						.form-horizontal.col-xs-12.col-md-8.movimientos.nuevo
							.form-group
								label(for="#{tp.id}").control-label.col-md-6 #{tp.nombre}
								.col-md-6.input-group
									input.form-control(type="text" data-id="#{tp.id}" value="#{tp.cantidad}" name="#{tp.id}" id="nombre" placeholder="Nombre").col-xs-12.col-md-10
									span.input-group-addon
								.error.col-md-6.col-md-offset-6
