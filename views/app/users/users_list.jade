extends ../../layout
block content
	.row
		.col-xs-11.col-sm-11.col-centered
			h3 Usuarios
		.col-xs-11.col-sm-11.col-centered#userslist
			include ../../snipets/errors
			each user,i in users
				.col-xs-12.user(data-userid="#{user.id}")
					.col-sm-8.col-xs-12.info
						div.data.col-xs-11
							p.nombre #{user.username}
							p.email #{user.email}
						div.acciones.col-xs-1
							a(href="#")
								i.fa.fa-fw.fa-ellipsis-h  
					.col-xs-10.col-xs-offset-2.col-sm-3.col-sm-offset-0.col-md-4.col-md-offset-0.col-lg-4.rolewrapper
						h3 Roles
						.roles
		