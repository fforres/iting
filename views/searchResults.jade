extends layout

block content
	include snipets/errors
	
	.row.fullheight.index
		.col-xs-12.col-sm-12.fullheight
			h1 Restaurantes
			.restaurantes-container.col-md-9
				each restaurant,i in rest
					.restaurant(attr-numero='#{i}')
						strong.nombre
							h3 
								a(href="/restaurant/#{restaurant.id}").url #{restaurant.nombre}
							h5
								a(href="/comunas/#{restaurant.comuna.id}").url #{restaurant.comuna.nombre}
							h5 
								a(href="/comunas/#{restaurant.categoria.id}").url #{restaurant.categoria.nombre}
